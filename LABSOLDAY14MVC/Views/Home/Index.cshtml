@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-0">
    <h1 class="text-center mb-2">Welcome to Class</h1>
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
            <div class="card rounded-custom h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Instructors</h5>
                    <a href="@Url.Action("getAllInstructor", "Instructor")" class="btn btn-primary btn-block">View <br>Instructors</br></a> <!-- Added btn-block -->
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card rounded-custom h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Course</h5>
                    <a href="@Url.Action("GetAllCourses", "Course")" class="btn btn-primary btn-block">View Courses</a> <!-- Added btn-block -->
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 mb-3" >
            <div class="card rounded-custom h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">Department</h5>
                    <a href="@Url.Action("GetAllDepartments", "Department")" class="btn btn-primary btn-block">View Departments</a> <!-- Added btn-block -->
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card rounded-custom h-100" ">
                <div class="card-body d-flex flex-column justify-content-between" >
                    <h5 class="card-title">Trainees</h5>
                    <a href="@Url.Action("GetAllTrainees", "Trainee")" class="btn btn-primary btn-block">View <br/>Trainees</a> <!-- Added btn-block -->
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; /* Align items at the top */
        height: 70vh; /* Adjust height as needed */
    }

    .card {
        transition: transform 0.3s; /* Optional hover effect */
    }

        .card:hover {
            transform: scale(1.02); /* Slightly scale on hover */
        }
</style>
