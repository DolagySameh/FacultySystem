@using LABSOLDAY14MVC.Models.ViewModels
@model TraineeVM
@{
    SelectList CrsOpt = new SelectList(ViewBag.course, "id", "name");
    SelectList DeptOpt = new SelectList(ViewBag.departments, "id", "name");
}
<h2 class="mb-4">Trainee Information</h2>
<div class="form-group">
    <label asp-for="name" style="margin-top:12px; font-weight:400;font-size:20px;margin-bottom:3px;"></label>
    <input asp-for="name" class="form-control form-control-lg" placeholder="Enter Name" />
    <span asp-validation-for="name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Address" style="margin-top:12px; font-weight:400;font-size:20px;margin-bottom:3px;">Address</label>
    <input asp-for="Address" class="form-control form-control-lg" placeholder="Enter Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="imag" style="margin-top:12px; font-weight:400;font-size:20px;margin-bottom:3px;">ImageUrl</label>
    <input asp-for="imag" class="form-control form-control-lg" placeholder="Enter imagUrl" />
    <span asp-validation-for="imag" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DeptId" style="margin-top:12px; font-weight:400;font-size:20px;">Department</label>
    <select asp-for="DeptId" asp-items="DeptOpt" class="form-control">
    </select>
    <span asp-validation-for="DeptId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="SelectedCourseIds" style="margin-top:12px; font-weight:400;font-size:20px;margin-bottom:3px;">Course He Take</label>
    <select asp-for="SelectedCourseIds" asp-items="CrsOpt" class="form-control" multiple>
    </select>
    <span asp-validation-for="SelectedCourseIds" class="text-danger"></span>
</div>
<br />
<button type="submit" class="btn btn-primary btn-lg">Submit</button>