<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LABSOLDAY14MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LABSOLDAY14MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            margin: 0;
            height: 100vh;
            background-color: #f0f4f8; /* Light background color */
            color: #333; /* Darker text color for contrast */
            display: flex;
            flex-direction: column;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: 80px; /* Increased height */
            z-index: 1000;
            background-color: transparent; /* No color */
            transition: background-color 0.3s ease; /* Smooth transition */
        }

            .navbar.scrolled {
                background-color: rgba(0, 0, 0, 0.8); /* Dark color when scrolled */
            }

        .footer {
            background-color: #2b2b2b; /* Dark close to black */
            display: flex;
            justify-content: space-between; /* Align items left and right */
            align-items: center; /* Center items vertically */
            padding: 30px 40px; /* Increased padding for height */
            color: #fff; /* Light text for contrast */
            font-size: 16px; /* Slightly larger font size */
        }

        footer.scrolled {
            background-color: #1f1f1f; /* Darker when scrolled */
        }

        .footer-links a,
        .social-icons a {
            color: #fff; /* Link color */
            margin: 0 15px; /* Reduced margin */
            transition: color 0.3s; /* Smooth transition for hover effect */
        }

        .social-icons a {
            font-size: 20px; /* Size for icons */
        }

        main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 90px; /* Space below navbar */
            width: 100%;
        }

        .custom-nav-link {
            border: 2px solid #fff; /* White border */
            border-radius: 25px; /* Rounded corners */
            padding: 10px 30px; /* Increased padding for width */
            font-size: 18px; /* Increased font size */
            margin: 0 15px; /* Increased space between links */
            min-width: 120px; /* Minimum width for buttons */
            transition: background-color 0.3s, color 0.3s; /* Smooth transition */
            background-color: #add8e6; /* Baby blue background color */
            color: #333; /* Dark text color */
            text-align: center; /* Center text */
            display: flex; /* Use flexbox for centering */
            justify-content: center; /* Center content horizontally */
            align-items: center; /* Center content vertically */
        }

            .custom-nav-link:hover {
                background-color: #87ceeb; /* Hover color (light blue) */
                color: #333; /* Keep text color on hover */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>CLASS Program</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end ms-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link" asp-area="" asp-controller="Instructor" asp-action="GetAllInstructor">Instructors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link" asp-area="" asp-controller="Course" asp-action="GetAllCourses">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link" asp-area="" asp-controller="Trainee" asp-action="GetAllTrainees">Trainees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-nav-link" asp-area="" asp-controller="Department" asp-action="GetAllDepartments">Departments</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer text-muted">
        <div class="footer-links">
            <a href="#">About Us</a>
            <a href="#">Contact</a>
            <a href="#">Terms</a>
            <a href="#">FAQ</a>
        </div>
        <div class="social-icons">
            <a href="#" class="fab fa-facebook"></a>
            <a href="#" class="fab fa-twitter"></a>
            <a href="#" class="fab fa-instagram"></a>
            <a href="#" class="fab fa-linkedin"></a>
        </div>
        <div class="footer-info">
            <p>&copy; 2024 LABSOLDAY14MVC | All rights reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Change navbar and footer color on scroll
        $(window).on('scroll', function () {
            const scrolled = $(this).scrollTop() > 50;
            $('.navbar').toggleClass('scrolled', scrolled);
            $('footer').toggleClass('scrolled', scrolled);
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
