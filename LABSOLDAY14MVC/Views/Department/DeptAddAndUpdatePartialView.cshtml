@model Department
<h2 class="mb-4">Department Information</h2>
<div class="form-group">
    <label asp-for="name" style="margin-top:12px; font-weight:400;font-size:20px;margin-bottom:3px;"></label>
    <input asp-for="name" class="form-control form-control-lg" placeholder="Enter Name" />
    <span asp-validation-for="name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Manager" style="margin-top:12px; font-weight:400;font-size:20px;margin-bottom:3px;">Manager</label>
    <input asp-for="Manager" class="form-control form-control-lg" placeholder="Enter Address" />
    <span asp-validation-for="Manager" class="text-danger"></span>
</div>
<br />
<button type="submit" class="btn btn-primary btn-lg">Submit</button>